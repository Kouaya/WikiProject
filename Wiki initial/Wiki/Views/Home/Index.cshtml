@model Wiki.Models.Biz.Article

@{
    ViewBag.Title = "Index";
}



@if (ViewBag.Status == "null")
{
    <center><h2>Bienvenue</h2></center>
    <hr>

    <p>
        Intro
    </p>

    <form action="/Home/index" method="get">
        <label for="txtNomArticle">nom</label>
        <input type="text" name="id" id="id" />
        <input type="submit" value="Envoyer" />
    </form>
}

@if (ViewBag.Status == "found")
{
    <h2>@Html.DisplayFor(model => model.Titre)</h2>
    <hr />


    <p>Titre : <br />@Html.DisplayFor(model => model.Titre)</p>
    <br />
    <p>Contenu : <br />@Html.Raw(Model.Contenu)</p>
    <br />
    <p>Date  modif :<br /> @Html.DisplayFor(model => @model.DateModification)</p>
    <br />
    <p>Révision no: <br />@Html.DisplayFor(model => model.Revision)</p>
    <br />
    <p>Contributeur: <br />@Html.DisplayFor(model => model.IdContributeur)</p>

    <hr />
    if (User.Identity.IsAuthenticated)
    {
        @Html.ActionLink("Modifier", "Edit", "Home", new { id = Model.Titre }, new { @class = "classname" })
        <text>&nbsp; &nbsp;</text>
        @Html.ActionLink("Effacer", "Delete", "Home", new { id = Model.Titre }, new { @class = "classname" })
    }
    else
    {
        @Html.ActionLink("Connexion", "Connexion", "Utilisateurs")

    }
    <text>&nbsp; &nbsp;</text>
    @Html.ActionLink("Accueil", "Index", "Home", new { id = "" }, null)


}


@if (ViewBag.Status == "else")
{
    <h2>ArticleInexistant</h2>

    if (User.Identity.IsAuthenticated)
    {
        <p>ArticleCreer</p>
    }

    <br />


    if (User.Identity.IsAuthenticated)
    {
        @Html.ActionLink("Créer", "Create", "Home", new { id = Model.Titre }, new { @class = "classname" })
    }
    else
    {
        @Html.ActionLink("Connexion", "Create", "Home", new { id = Model.Titre }, new { @class = "classname" })
    }
    <text>&nbsp; &nbsp;</text>
    @Html.ActionLink("Accueil", "Index", "Home", new { id = "" }, null)



}