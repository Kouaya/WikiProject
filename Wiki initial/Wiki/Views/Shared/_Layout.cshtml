<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prog Web II @ViewBag.Title</title>    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/style.css")
    <meta name="description" content="The description of my page" />
</head>
<body>
    @Html.Partial("Menu")
    <div class="container">
        <div class="row content">
            <br /><br />
            <div class="col-sm-3 sidenav">
                @RenderSection("gauche", required: false)
                <h3 class="table-contains">@Wiki.Ressources.Shared._Layout.Title</h3>
                @foreach (string titre in ViewBag.TitleList) {
                    <ul>
                        <li>@Html.ActionLink(titre, "Display", "Home", new { titre=titre},null)</li>                        
                    </ul>
                }
                
            </div>
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
        <footer class="container-fluid">
            <p>&copy; @DateTime.Now.Year - @Wiki.Ressources.Shared._Layout.Wiki</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
