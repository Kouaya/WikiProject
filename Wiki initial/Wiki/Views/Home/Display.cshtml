@model Wiki.Models.Biz.Article

@{
    ViewBag.Title = "Display";
}

<div class="view-position">
    <h4>@Wiki.Ressources.Home.Views.Article</h4>
    <hr />
    @if (Model.Titre != null) {
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Titre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Titre)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DateModification)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateModification)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Revision)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Revision)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IdContributeur)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IdContributeur)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Contenu)
            </dt>

            <dd>
                @Html.Raw(Model.Contenu)
            </dd>
        </dl>
        if (User.Identity.IsAuthenticated) {
            <p>
                @Html.ActionLink(Wiki.Ressources.Home.Views.EditArticle, "Modifier", new { titre = Model.Titre })
            </p>
        }
    }
    else {
        <p style="color:red;">@Wiki.Ressources.Home.Views.NotFoundMsg</p>
        if (User.Identity.IsAuthenticated) {
            <p>@Wiki.Ressources.Home.Views.ProposalToAddArticle</p>
            <p>@Html.ActionLink(Wiki.Ressources.Home.Views.AddArticle, "Ajouter", "Home", new { titre = ViewBag.Ajout }, null)</p>
        }
    }
</div>
