@using Wiki.Resources.Views
@using Wiki.Resources.Models

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Prog Web II", "Index", "Home", new { id = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @if (User.Identity.IsAuthenticated)
                {
                    <li>@Html.ActionLink(@StringsShared.LienProfil, "Profil", "Utilisateurs")  <text>&nbsp; &nbsp;</text></li>
                    <li>@Html.ActionLink(@StringsShared.LienDeconnexion, "Deconnexion", "Utilisateurs")  <text>&nbsp; &nbsp;</text></li>
                }
                else
                {
                    <li>@Html.ActionLink(@StringsShared.LienInscription, "Inscription", "Utilisateurs")   <text>&nbsp; &nbsp;</text></li>
                    <li>@Html.ActionLink(@StringsShared.LienConnexion, "Connexion", "Utilisateurs")  <text>&nbsp; &nbsp;</text></li>
                }

                <li class="dropdown">
                    <a href="" class="dropdown-toggle" data-toggle="dropdown" title="CSS Bootstrap">@StringsUtilisateur.Langue </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink(StringsLangues.en, "ChangerLangue", "Home", new { langue = StringsLangues.param_en, returnURL = this.Request.RawUrl }, null)</li>
                        <li>@Html.ActionLink(StringsLangues.es, "ChangerLangue", "Home", new { langue = StringsLangues.param_es, returnURL = this.Request.RawUrl }, null)</li>
                        <li>@Html.ActionLink(StringsLangues.fr, "ChangerLangue", "Home", new { langue = StringsLangues.param_fr, returnURL = this.Request.RawUrl }, null)</li>
                        <li>@Html.ActionLink(StringsLangues.pt, "ChangerLangue", "Home", new { langue = StringsLangues.param_pt, returnURL = this.Request.RawUrl }, null)</li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</div>