@model Wiki.Models.Biz.Article

@{
    ViewBag.Title = "Supprimer";
}

<div class="view-position">
    <h3>@Wiki.Ressources.Home.Views.ConfirmationMsg</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Titre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Titre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateModification)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateModification)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Revision)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Revision)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IdContributeur)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IdContributeur)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Contenu)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Contenu)
        </dd>

    </dl>

    @using (Html.BeginForm(Wiki.Ressources.Home.Views.DeleteArticle,"Home", new{title=Model.Titre},  FormMethod.Post)) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="OK" class="btn btn-info" /> |
            @Html.ActionLink(Wiki.Ressources.Home.Views.BacktoDisplay, "Display", new { titre = Model.Titre }, null)
        </div>
    }
</div>
